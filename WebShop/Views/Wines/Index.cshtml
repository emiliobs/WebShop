            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.YearOfBottling)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AlcoholPercentage)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ImagePath)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WineType)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {id = item.WineId}, new {@class = "btn btn-info"})

        </td>
        <td>
            @Html.ActionLink("Details", "Details", new {id = item.WineId}, new {@class = "btn btn-primary"})

        </td>
